{% extends ":Default:base.html.twig" %}

{% block head %}

    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <link rel="stylesheet" href="{{ asset('css/'~theme()~'/login.css') }}" media="screen"/>

    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="{{  asset( getJavascriptPath('loginscript.js') )}}"></script>
    <script src="{{  asset( getJavascriptPath('registrationscript.js') )}}"></script>

{% endblock %}

{% block header %}
    {% include ':Default:headerLogo.html.twig' %}
{% endblock header%}

{% block body %}

  {% block fos_user_content %}

    <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="panel-title">Sign Up</div>
          <div style="float:right; font-size: 85%; position: relative; top:-10px"><a id="signinlink" href="#" onclick="$('#signupbox').hide(); $('#loginbox').show()">Sign In</a></div>
        </div>
        <div class="panel-body" >
          <form id="registration_form" action="{{ path('register_check') }}" {{ form_enctype(form) }} method="POST" role="form" class="fos_user_registration_register form-horizontal">

            <div id="signupalert" style="display:none" class="alert alert-danger">
              {{ form_errors(form) }}
            </div>

            <div id="sonata_user_registration_form">

              <div class="form-group">
                <div class="col-md-9 input-group">
                  <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                  <input type="text" id="sonata_user_registration_form_username" class="form-control" name="sonata_user_registration_form[username]" placeholder="Username">
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-9 input-group">
                  <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                  <input type="text" id="sonata_user_registration_form_email" class="form-control" name="sonata_user_registration_form[email]" placeholder="Email Address">
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-9 input-group">
                  <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                  <input type="password" id="sonata_user_registration_form_plainPassword_first" class="form-control" name="sonata_user_registration_form[plainPassword][first]" placeholder="Password">
                </div>
              </div>

              <div class="form-group">
                <div class="col-md-9 input-group">
                  <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                  <input type="password" id="sonata_user_registration_form_plainPassword_second" class="form-control" name="sonata_user_registration_form[plainPassword][second]" placeholder="Password confirm">
                </div>
              </div>

              <input id="sonata_user_registration_form__token" type="hidden" name="sonata_user_registration_form[_token]" value="{{ csrf_token('authentication') }}" />
            </div>

            <div class="form-group">
              <!-- Button -->
              <div class="col-md-offset-3 col-md-9">
                <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Sign Up</button>
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12 control">
                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                  {{ "login.forgotPass"|trans({}, "catroweb") }}
                  <a id="pw-request" href="{{ path("sonata_user_resetting_request") }}"> Click here</a>
                </div>
                <div style="padding-top:15px; font-size:85%">
                  Already having an account?
                  <a id="create_account"
                     href="{{ path('login') }}">Log in</a>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    </div>




    <form id="registration_form" action="{{ path('register_check') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
      {#{{ form_widget(form) }}#}
      {{ form_errors(form) }}
      <div id="sonata_user_registration_form">

        <div class="input-field">
          {{ form_widget(form.username, {'required': false, 'attr': {'placeholder': 'Username' } }) }}
          <div class="img-login"></div>
        </div>

        <div class="input-field">
          {{ form_widget(form.email, {'required': false, 'attr': {'placeholder': 'Email' } }) }}
          <div class="img-login"></div>
        </div>

        <div class="input-field">
          {{ form_widget(form.plainPassword.first, {'required': false, 'attr': {'placeholder': 'Password' } }) }}
          <div class="img-login"></div>
        </div>

        <div class="input-field">
          {{ form_widget(form.plainPassword.second, {'required': false, 'attr': {'placeholder': 'Password Confirm' } }) }}
          <div class="img-login"></div>
        </div>

        <input id="sonata_user_registration_form__token" type="hidden" name="sonata_user_registration_form[_token]" value="{{ csrf_token('authentication') }}" />
      </div>
        {% for flash_message in app.session.flashBag.get('catroweb_error_message') %}
        <div id="Error-Message" style="display:block">
            <p>{{ flash_message|trans({}, "catroweb") }}</p>
        </div>
        {% endfor %}
      <div id="Error-Message" style="display:none">
          <p>{{ 'registrationError'|trans({}, 'catroweb') }}</p>
      </div>

      <div>
        {#<input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />#}
        <input class="button" type="submit" value="Create my Account" />
      </div>
      {{ form_rest(form) }}
    </form>

    {% include ':social:oauth_form.html.twig' %}

  {% endblock fos_user_content %}

{% endblock body %}
